{
    "arxiv_id": "2312.16965",
    "title": "Reinforcement-based Display-size Selection for Frugal Satellite Image Change Detection",
    "authors": [
        {
            "name": "H Sahbi",
            "citations_all": 3819,
            "citations_recent": 1970,
            "h_index_all": 43,
