{
    "arxiv_id": "1712.03948",
    "title": "Cross-Layer Optimization for Power-Efficient and Robust Digital Circuits and Systems",
    "authors": [
        {
            "name": "Y Huang",
            "citations_all": 235,
            "citations_recent": 150,
            "h_index_all": 10,
            "h_index_recent": 6,
            "i10_index_all": 10,
            "i10_index_recent": 5
