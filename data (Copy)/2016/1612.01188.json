{
    "arxiv_id": "1612.01188",
    "title": "Privacy on the Blockchain: Unique Ring Signatures",
    "authors": [
        {
            "name": "R Mercer",
            "citations_all": 495,
            "citations_recent": 416,
            "h_index_all": 5,
