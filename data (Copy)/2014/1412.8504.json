{
    "arxiv_id": "1412.8504",
    "title": "Probing the topological properties of complex networks modeling short written texts",
    "authors": [
        {
            "name": "DR Amancio",
            "citations_all": 4775,
            "citations_recent": 3456,
            "h_index_all": 40,
