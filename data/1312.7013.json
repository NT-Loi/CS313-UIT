{
    "arxiv_id": "1312.7013",
    "title": "Theoretical Bitcoin Attacks with less than Half of the Computational Power (draft)",
    "authors": [
        {
            "name": "L Bahack",
            "citations_all": null,
            "citations_recent": null,
            "h_index_all": null,
