{
    "arxiv_id": "1511.09067",
    "title": "Sparse Coral Classification Using Deep Convolutional Neural Networks",
    "authors": [
        {
            "name": "M Elawady",
            "citations_all": 164,
            "citations_recent": 113,
            "h_index_all": 5,
