{
    "arxiv_id": "1401.6106",
    "title": "Bringing Reference Groups Back: Agent-based Modeling of the Spiral of Silence",
    "authors": [
        {
            "name": "CJ Wang",
            "citations_all": 472,
            "citations_recent": 352,
            "h_index_all": 9,
