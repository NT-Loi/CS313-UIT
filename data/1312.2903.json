{
    "arxiv_id": "1312.2903",
    "title": "The lower tail of random quadratic forms, with applications to ordinary least squares and restricted eigenvalue properties",
    "authors": [
        {
            "name": "RI Oliveira",
            "citations_all": 3688,
            "citations_recent": 2056,
