{
    "arxiv_id": "1701.00082",
    "title": "A computational investigation of the relationships between single-neuron and network dynamics in the cerebral cortex",
    "authors": [
        {
            "name": "S Cavallari",
            "citations_all": null,
            "citations_recent": null,
            "h_index_all": null,
