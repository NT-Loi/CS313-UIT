{
    "arxiv_id": "2012.11599",
    "title": "BERTChem-DDI : Improved Drug-Drug Interaction Prediction from text using Chemical Structure Information",
    "authors": [
        {
            "name": "I Mondal",
            "citations_all": 1606,
            "citations_recent": 1592,
