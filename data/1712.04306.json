{
    "arxiv_id": "1712.04306",
    "title": "In folly ripe. In reason rotten. Putting machine theology to rest",
    "authors": [
        {
            "name": "M Nadin",
            "citations_all": 2690,
            "citations_recent": 767,
            "h_index_all": 27,
