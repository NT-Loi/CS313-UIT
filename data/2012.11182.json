{
    "arxiv_id": "2012.11182",
    "title": "Program State Abstraction for Feedback-Driven Fuzz Testing using Likely Invariants",
    "authors": [
        {
            "name": "A Fioraldi",
            "citations_all": 1509,
            "citations_recent": 1497,
            "h_index_all": 8,
            "h_index_recent": 8,
