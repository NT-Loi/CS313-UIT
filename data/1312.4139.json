{
    "arxiv_id": "1312.4139",
    "title": "Towards slime mould colour sensor: Recognition of colours by Physarum polycephalum",
    "authors": [
        {
            "name": "A Adamatzky",
            "citations_all": 18802,
            "citations_recent": 7156,
