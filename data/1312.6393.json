{
    "arxiv_id": "1312.6393",
    "title": "Privacy Preserving Enforcement of Sensitive Policies in Outsourced and Distributed Environments",
    "authors": [
        {
            "name": "MR Asghar",
            "citations_all": 3396,
            "citations_recent": 2794,
