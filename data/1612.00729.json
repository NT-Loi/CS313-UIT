{
    "arxiv_id": "1612.00729",
    "title": "Automated assessment of non-native learner essays: Investigating the role of linguistic features",
    "authors": [
        {
            "name": "S Vajjala",
            "citations_all": 2706,
            "citations_recent": 1853,
